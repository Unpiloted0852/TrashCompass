<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    tools:context=".MainActivity">

    <!-- SETTINGS (Pinned to top-right, independent of Title) -->
    <ImageView
        android:id="@+id/ivSettings"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="10dp"
        android:src="@drawable/ic_gear"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- TITLE (Lower down, Bigger, Bold, with Caret) -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:drawableEnd="@drawable/ic_caret_down"
        android:drawablePadding="8dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Nearest Trash Can"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- ACCURACY INDICATOR -->
    <TextView
        android:id="@+id/tvAccuracy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:alpha="0.7"
        android:text="Compass: Calibrating..."
        android:textColor="#CCCCCC"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/tvTitle"
        app:layout_constraintStart_toStartOf="@+id/tvTitle"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle" />

    <!-- COMPASS RING (Huge) -->
    <View
        android:id="@+id/viewRing"
        android:layout_width="340dp"
        android:layout_height="340dp"
        android:background="@drawable/compass_ring"
        app:layout_constraintBottom_toTopOf="@+id/tvDistance"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvAccuracy"
        app:layout_constraintVertical_bias="0.45" />

    <!-- ARROW (Huge) -->
    <ImageView
        android:id="@+id/ivArrow"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:src="@drawable/ic_navigation_arrow"
        app:tint="#444444"
        app:layout_constraintBottom_toBottomOf="@+id/viewRing"
        app:layout_constraintEnd_toEndOf="@+id/viewRing"
        app:layout_constraintStart_toStartOf="@+id/viewRing"
        app:layout_constraintTop_toTopOf="@+id/viewRing" />

    <!-- LOADING SPINNER -->
    <ProgressBar
        android:id="@+id/loadingSpinner"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:indeterminateTint="#32CD32"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/viewRing"
        app:layout_constraintEnd_toEndOf="@+id/viewRing"
        app:layout_constraintStart_toStartOf="@+id/viewRing"
        app:layout_constraintTop_toTopOf="@+id/viewRing" />

    <!-- DISTANCE TEXT -->
    <TextView
        android:id="@+id/tvDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:fontFamily="sans-serif-light"
        android:text="---"
        android:textColor="#FFFFFF"
        android:textSize="64sp"
        app:layout_constraintBottom_toTopOf="@+id/tvMetadata"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- METADATA (Inside X, Fee, etc) -->
    <TextView
        android:id="@+id/tvMetadata"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:text="Searching..."
        android:textColor="#32CD32"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tvMapButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- MAP BUTTON (Minor Feature: Small, Grey) -->
    <TextView
        android:id="@+id/tvMapButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        android:background="@drawable/compass_ring"
        android:backgroundTint="#11FFFFFF"
        android:gravity="center"
        android:paddingHorizontal="24dp"
        android:paddingVertical="8dp"
        android:text="Open Map"
        android:textColor="#AAAAAA"
        android:textSize="12sp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/tvHint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- FOOTER HINT -->
    <TextView
        android:id="@+id/tvHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:alpha="0.3"
        android:text="Tap distance to change units"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- LEGAL -->
    <TextView
        android:id="@+id/tvLegal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="24dp"
        android:alpha="0.2"
        android:text="Legal"
        android:textColor="#FFFFFF"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>