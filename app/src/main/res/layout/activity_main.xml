<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    tools:context=".MainActivity">

    <!-- HEADER: TITLE & SETTINGS -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="sans-serif-medium"
        android:text="NEAREST TRASH CAN"
        android:textColor="#FFFFFF"
        android:letterSpacing="0.05"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/ivSettings"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivSettings"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="8dp"
        android:src="@drawable/ic_gear"
        app:layout_constraintBottom_toBottomOf="@+id/tvTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvTitle" />

    <!-- ACCURACY INDICATOR (Small text under title) -->
    <TextView
        android:id="@+id/tvAccuracy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:alpha="0.7"
        android:text="Compass: Calibrating..."
        android:textColor="#CCCCCC"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/tvTitle"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle" />

    <!-- COMPASS SECTION (CENTER) -->
    <View
        android:id="@+id/viewRing"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:background="@drawable/compass_ring"
        app:layout_constraintBottom_toTopOf="@+id/tvDistance"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvAccuracy"
        app:layout_constraintVertical_bias="0.45" />

    <ImageView
        android:id="@+id/ivArrow"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_navigation_arrow"
        app:tint="#444444"
        app:layout_constraintBottom_toBottomOf="@+id/viewRing"
        app:layout_constraintEnd_toEndOf="@+id/viewRing"
        app:layout_constraintStart_toStartOf="@+id/viewRing"
        app:layout_constraintTop_toTopOf="@+id/viewRing" />

    <!-- LOADING SPINNER (Overlays Arrow) -->
    <ProgressBar
        android:id="@+id/loadingSpinner"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:indeterminateTint="#32CD32"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/viewRing"
        app:layout_constraintEnd_toEndOf="@+id/viewRing"
        app:layout_constraintStart_toStartOf="@+id/viewRing"
        app:layout_constraintTop_toTopOf="@+id/viewRing" />

    <!-- DATA SECTION (BOTTOM) -->
    <TextView
        android:id="@+id/tvDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:fontFamily="sans-serif-light"
        android:text="---"
        android:textColor="#FFFFFF"
        android:textSize="64sp"
        app:layout_constraintBottom_toTopOf="@+id/tvMetadata"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvMetadata"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:text="Searching..."
        android:textColor="#32CD32"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tvMapButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- ACTION BUTTON -->
    <TextView
        android:id="@+id/tvMapButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:background="@drawable/compass_ring"
        android:backgroundTint="#22FFFFFF"
        android:gravity="center"
        android:paddingHorizontal="32dp"
        android:paddingVertical="12dp"
        android:text="OPEN MAP"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:letterSpacing="0.1"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/tvHint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- FOOTER HINT -->
    <TextView
        android:id="@+id/tvHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:alpha="0.4"
        android:text="Tap distance to change units"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- LEGAL (Bottom Right) -->
    <TextView
        android:id="@+id/tvLegal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="24dp"
        android:alpha="0.3"
        android:text="Legal"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>